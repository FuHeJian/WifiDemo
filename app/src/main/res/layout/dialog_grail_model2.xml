            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="38dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF1C252F"
                android:clipChildren="false"
                android:paddingLeft="29dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp"
                android:paddingBottom="220dp">

                <LinearLayout
                    android:id="@+id/grailAnchor"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.snoppa.libra.view.RebotRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="holy grail"
                        android:textColor="@color/C_FFFFFF"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <Switch
                        android:id="@+id/grailSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="34dp"
                        android:background="@null"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/thumb_bg" />

                </LinearLayout>

                <com.snoppa.libra.view.RebotRegularTextView
                    android:id="@+id/brightnessTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:text="目标亮度趋势"
                    android:textColor="@color/C_FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/grailAnchor">

                </com.snoppa.libra.view.RebotRegularTextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/holyLine_container"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rectangle_6"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:padding="15dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/brightnessTitle">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"></TextView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/deletePoint"
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:background="@drawable/holyline_delete_icon"
                        app:backgroundTint="#ffffff"
                        app:layout_constraintBottom_toBottomOf="@id/time"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/time">

                    </com.google.android.material.button.MaterialButton>

                    <View
                        android:id="@+id/anchorTop"
                        android:layout_width="match_parent"
                        android:layout_height="10dp">

                    </View>

                    <com.snoppa.libra.view.HolyGrailBrokeLine
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                    </com.snoppa.libra.view.HolyGrailBrokeLine>

                    <androidx.constraintlayout.helper.widget.Flow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:constraint_referenced_ids="time,anchorTop,progressBar"
                        app:flow_wrapMode="chain"
                        app:layout_constraintTop_toTopOf="parent">

                    </androidx.constraintlayout.helper.widget.Flow>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.snoppa.libra.view.RebotRegularTextView
                    android:id="@+id/holyLine_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
