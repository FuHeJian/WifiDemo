                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.snoppa.libra.view.RebotRegularTextView
                                    android:id="@+id/sMinValueText1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/C_FFFFFF"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/st11"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.snoppa.libra.view.RebotRegularTextView
                                    android:id="@+id/st22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="]-["
                                    android:textColor="@color/C_FFFFFF"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/sMinValueText1"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.snoppa.libra.view.RebotRegularTextView
                                    android:id="@+id/sMaxValueText1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/C_FFFFFF"
                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/st22"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.snoppa.libra.view.RebotRegularTextView
                                    android:id="@+id/st33"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
