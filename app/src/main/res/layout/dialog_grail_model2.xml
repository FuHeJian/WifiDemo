                                    android:textSize="16sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/sMaxValueText1"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/minMaxSafeAnchor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/minMaxAnchor">

                            <com.snoppa.libra.view.RebotRegularTextView
                                android:id="@+id/sSafet11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="["
                                android:textColor="@color/C_FFFFFF"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />

                            <com.snoppa.libra.view.RebotRegularTextView
                                android:id="@+id/sSafeMinValueText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/C_FFFFFF"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/sSafet11"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.snoppa.libra.view.RebotRegularTextView
                                android:id="@+id/sSafet22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="]-["
                                android:textColor="@color/C_FFFFFF"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/sSafeMinValueText1"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.snoppa.libra.view.RebotRegularTextView
                                android:id="@+id/sSafeMaxValueText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textColor="@color/C_FFFFFF"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/sSafet22"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.snoppa.libra.view.RebotRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="]"
                                android:textColor="@color/C_FFFFFF"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/sSafeMaxValueText1"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <androidx.constraintlayout.helper.widget.Flow
                        android:id="@+id/isoFSFlow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:constraint_referenced_ids="iso,f,s"
                        app:flow_horizontalStyle="spread_inside"
                        app:flow_wrapMode="chain">

                    </androidx.constraintlayout.helper.widget.Flow>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.snoppa.libra.view.RebotRegularTextView
                    android:id="@+id/longCLickHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="6dp"
                    android:text="长按调整顺序。单击设置参数。"
                    android:textColor="#99ffffff"
                    app:layout_constraintLeft_toLeftOf="@id/select_container"
                    app:layout_constraintTop_toBottomOf="@id/select_container"

                    />

                <LinearLayout
                    android:id="@+id/isoAnchor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:background="#33FFFFFF"
                    android:orientation="vertical"
