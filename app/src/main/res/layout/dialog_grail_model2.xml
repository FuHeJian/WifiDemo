                    app:layout_constraintLeft_toLeftOf="@id/holyLine_container"
                    app:layout_constraintTop_toBottomOf="@id/holyLine_container">

                </com.snoppa.libra.view.RebotRegularTextView>


                <com.snoppa.libra.view.RebotRegularTextView
                    android:id="@+id/priority_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="优先级设置"
                    android:textColor="@color/C_FFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="@id/holyLine_hint"
                    app:layout_constraintTop_toBottomOf="@id/holyLine_hint">

                </com.snoppa.libra.view.RebotRegularTextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/select_container"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="@id/priority_title"
                    app:layout_constraintTop_toBottomOf="@id/priority_title">

                    <LinearLayout
                        android:id="@+id/iso"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:background="#0FFFFFFF"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:tag="2"
                        app:layout_constraintWidth_percent="0.3">

                        <TextView
                            android:id="@+id/iso_button_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ISO"
                            android:textColor="@color/C_FFFFFF"
                            android:textSize="14sp">

                        </TextView>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
