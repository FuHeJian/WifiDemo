                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toRightOf="@id/ft11"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.snoppa.libra.view.RebotRegularTextView
